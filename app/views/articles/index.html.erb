<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th><font size = '5'>Title &nbsp</font></th>
      <th><font size = '5'>Content</font></th>
      <th><font size = '5'>Category </font></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= article.category %></td>
        <td><%= link_to 'Show', article %>&nbsp</td>
        <td><%= link_to 'Edit ', edit_article_path(article) %>&nbsp</td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

